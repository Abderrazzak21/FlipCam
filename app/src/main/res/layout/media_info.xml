<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/settingsBarColor"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/turqoise"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".05"
            android:src="@mipmap/ic_launcher"
            android:contentDescription="@string/flipCamContentDescription"/>

        <TextView
            android:id="@+id/mediaInfoTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/mediaInfoTitle"
            android:textAlignment="center"
            android:textColor="@color/mediaControlColor"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".05"
            android:visibility="invisible"
            app:srcCompat="@drawable/placeholder"
            android:contentDescription="@string/placeholderContentDescription"/>

    </LinearLayout>

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/mediaInfoStartMargin"
        android:layout_marginTop="@dimen/mediaInfoTopMargin"
        android:layout_marginEnd="@dimen/mediaInfoStartMargin"
        android:textColor="@color/turqoise" />

    <TextView
        android:id="@+id/path"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/mediaInfoStartMargin"
        android:layout_marginTop="@dimen/mediaInfoTopMargin"
        android:layout_marginEnd="@dimen/mediaInfoStartMargin"
        android:textColor="@color/turqoise" />

    <TextView
        android:id="@+id/size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/mediaInfoStartMargin"
        android:layout_marginTop="@dimen/mediaInfoTopMargin"
        android:layout_marginEnd="@dimen/mediaInfoStartMargin"
        android:textColor="@color/turqoise" />

    <TextView
        android:id="@+id/dateCreated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/mediaInfoStartMargin"
        android:layout_marginTop="@dimen/mediaInfoTopMargin"
        android:layout_marginEnd="@dimen/mediaInfoStartMargin"
        android:textColor="@color/turqoise" />

    <TextView
        android:id="@+id/dimension"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/mediaInfoStartMargin"
        android:layout_marginTop="@dimen/mediaInfoTopMargin"
        android:layout_marginEnd="@dimen/mediaInfoStartMargin"
        android:textColor="@color/turqoise" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/okButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/okBtnLeftAndRightMargin"
            android:layout_marginTop="@dimen/okBtnTopMargin"
            android:layout_marginEnd="@dimen/okBtnLeftAndRightMargin"
            android:layout_marginBottom="@dimen/okBtnBottomMargin"
            android:layout_weight="0.5"
            android:background="@color/thumbnailPlaceholder"
            android:onClick="okToClose"
            android:text="@string/okToDelete"
            android:textColor="@color/turqoise" />
    </LinearLayout>

</LinearLayout>